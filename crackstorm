#!/usr/bin/env python3
import argparse
import hashlib
import threading
import queue
import logging
import os
import paramiko
from ftplib import FTP
import sys

# Setup logs
os.makedirs("logs", exist_ok=True)
logging.basicConfig(filename="logs/log.txt", level=logging.INFO, format="%(asctime)s - %(message)s")
paramiko.util.log_to_file("logs/paramiko.log")

# Thread queue
combo_queue = queue.Queue()

# ANSI Colors
GREEN = "\033[1;32m"
RED = "\033[1;31m"
RESET = "\033[0m"

# Banner
def print_banner():
    banner = f"""{GREEN}
